<!--Top_content-->
<section class="home grey first">
  <div class="container">
    <div class="inner">
      <div class="row">
        <div class="col-sm-6">
          <div class="left_container">
            <h3>Benvenuti</h3>
            <h1>{{ html.getPageData('site_name') }}</h1>
            {{ html.getArticle('presentazione').summary }}
            <div class="row">
              <div class="col-md-4 col-xs-6">
                <a href="{{ html.link2('home') }}#servizi" class="more"><i class="fa fa-caret-right"></i> I nostri servizi</a>
              </div>
              <div class="col-md-4 col-xs-6">
                <a href="{{ html.link2('home') }}#novita" class="more"><i class="fa fa-star"></i> Eventi e novità</a>
              </div>
              <div class="col-md-4 col-xs-6">
                <a href="{{ html.link2('home') }}#progetti_di_rete" class="more"><i class="fa fa-link"></i> Progetti di rete</a>
              </div>
            </div>

          </div>
        </div>
        <div class="col-sm-6">
          <div class="flipInX wow animated">
            <div class="carousel slide" id="carousel">
        			<div class="carousel-inner">
        				{% for art in html.getArticlesByTag('news') %}
        					{# if 'carousel' in art.tags #}
        						<div class="item{% if loop.index == 1%} active{% endif %}">
        							<img src="sites/default/images/articles/800x600/{{ art.id }}.jpg" alt="{{ art.title }}" />
        							<div class="carousel-caption">
        								<h4>
                          <a href="{{ art.url }}" title="{{ art.title }}">
                            <i class="fa fa-bullhorn fa-2x"></i> {{ art.title }}
                          </a>
                        </h4>
        							</div>
        						</div>
        					{# endif #}
        				{% endfor %}
        			</div>
      				<a class="left carousel-control" href="#carousel" data-slide="prev">
      					<span class="icon-prev"></span>
      				</a>

      				<a class="right carousel-control" href="#carousel" data-slide="next">
      					<span class="icon-next"></span>
      				</a>

        		</div><!-- end of carousel -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--Top_content-->

<!--Service-->
<section class="home service" id="servizi">
  <div class="container">
    <div class="inner">
      <h2>Servizi</h2>
      <div class="row">
      {% for i in html.getMenu('servizi') %}
        <div class="col-xs-6 col-md-4">
          <div class="item">
            <div class="icon icon{{ loop.index }} delay-03s animated wow  zoomIn">
              <a href="{{ i.href }}" title="{{ i.item }}">
                <span><i class="fa fa-{{ i.title }}"></i></span>
              </a>
            </div>
            <h3 class="animated fadeInUp wow">
              <a href="{{ i.href }}" title="{{ i.item }}">
                {{ i.item }}
              </a>
            </h3>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
</section>
<!--Service-->

<section class="home novita" id="novita"><!--main-section-start-->
  <div class="container">
    <div class="inner">
      <h2>Ultimi eventi e novità</h2>
      <div class="row">
        {% for art in html.getArticlesByTag('news', [1,4]) %}
          <div class="col-md-3 col-sm-6 col-xs-12 wow fadeInLeft delay-05s">
            <div class="thumbnails thumbnail-style">
              <div class="thumbnail-img">
                <div class="overflow-hidden">
                  <a href="{{ art.url }}" class="hover-effect" title="{{ art.title }}">
                    <img alt="{{ art.title }}" src="{{ art.art_img['400x300'] }}" class="img-responsive">
                  </a>
                </div>
              </div>
              <div class="caption">
                <h3><a href="{{ art.url }}" class="hover-effect" title="{{ art.title }}">{{ art.title }}</a></h3>
                <p>{{ art.summary|striptags|slice(0,150) }}...</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <p><a href="{{ html.link2('news', 'true') }}" class="more wow fadeInLeft">Tutte le novità</a></p>
    </div>
  </div>
</section>
<!--main-section-end-->


<section class="home rete" id="progetti_di_rete">
  <div class="container">
    <h2>Progetti di rete</h2>
    <div class="inner">
      <div class="row">
        {% for el in [
          ['E-Review. Rivista degli Istituti storici dell\'Emilia-Romagna in rete', 'http://e-review.it/', 'ereview'],
          ['Resistenza mAPPe', 'http://resistenzamappe.it/', 'resistenzamappe'],
          ['Guerra inFame', 'http://guerrainfame.it/', 'guerrainfame'],
          ['Portale della rete degli Istituti per la storia della Resistenza e della società contemporanea in Italia', 'http://www.italia-resistenza.it/', 'insilmi'],
          ['Atlante delle stragi nazi-fasciste', 'http://www.straginazifasciste.it/', 'atlantestragi'],
          ['Novecento.org', 'http://novecento.org', 'novecento']
        ] %}
        <div class="col-xs-6 col-sm-2 animated wow fadeIn">
          <a href="{{ el[1] }}" title="{{ el[0] }}" target="_blank">
            <img src="./sites/default/images/css/{{ el[2] }}.png?v3" class="img-responsive" alt="{{ el[0] }}" />
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>